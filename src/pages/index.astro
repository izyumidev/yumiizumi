---
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";

const blogs = await getCollection("blog").then((collection) => {
  return collection.sort((a, b) => {
    return new Date(b.data.pubDate) > new Date(a.data.pubDate) ? 1 : -1;
  });
});
interface Project {
  title: string;
  url: string;
  period: string;
}
const projects: Project[] = [
  {
    title: "onekiji",
    url: "https://onekiji.com",
    period: "since june 2023",
  },
  {
    title: "yumi.to",
    url: "https://yumi.to/_q",
    period: "october 2023",
  },
  {
    title: "xcode-discord-rpc",
    url: "https://yumi.to/xcode-discord-rpc",
    period: "october 2023",
  },
  {
    title: "dime",
    url: "https://github.com/rarfell/dimeApp",
    period: "since october 2023",
  },
  {
    title: "why privacy matters",
    url: "https://yumi.to/tedx",
    period: "late 2020",
  },
];

interface Stack {
  title: string;
  url: string;
}

const stacks: Stack[] = [
  {
    title: "raycast",
    url: "https://raycast.com",
  },
  {
    title: "arc",
    url: "https://arc.net",
  },
  {
    title: "macbook",
    url: "https://www.apple.com/mac/",
  },
  {
    title: "iphone",
    url: "https://www.apple.com/iphone/",
  },
  {
    title: "nvim",
    url: "https://neovim.io/",
  },
  {
    title: "vscode",
    url: "https://code.visualstudio.com/",
  },
  {
    title: "proton suite",
    url: "https://proton.me/",
  },
  {
    title: "discord",
    url: "https://discord.com/",
  },
  {
    title: "hyper",
    url: "https://hyper.is/",
  },
  {
    title: "signal",
    url: "https://signal.org/",
  },
  {
    title: "github",
    url: "https://github.com",
  },
  {
    title: "cleanshot x",
    url: "https://cleanshot.com/",
  },
  {
    title: "hhkb",
    url: "https://happyhackingkb.com/",
  },
