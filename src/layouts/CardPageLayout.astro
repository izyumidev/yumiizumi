---
import Meta from "@/layouts/Meta.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <Meta
      title={title}
      description="Yumi Izumi's Virtual Business Card"
      url="https://yumiizumi.com/card"
      image="https://yumiizumi.com/assets/business-card.png"
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <style>
      html {
        font-family: "Inter", sans-serif;
        height: 100%;
      }
      body {
        height: 100%;
        margin: 0;
      }
    </style>
  </body>
</html>
