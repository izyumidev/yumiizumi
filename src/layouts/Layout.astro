---
import "@/styles/color.scss";
import Footer from "@/components/Footer.astro";
import Nav from "@/components/Nav.astro";
import SkipToContent from "@/components/SkipToContent.astro";
import Socials from "@/components/Socials.astro";
import Head from "@/components/Head.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <Head title={title} description="Yumi Izumi's Portfolio" isBlog={false} />
  </head>
  <body>
    <SkipToContent />
    <Nav />
    <main id="main">
      <slot />
    </main>
    <Socials />
    <Footer />
    <style lang="scss" is:global>
      @font-face {
        font-family: ForzanLight;
        src: url(/assets/ForzanLight.ttf) format("truetype");
        font-display: swap;
      }

      @font-face {
        font-family: Texgyrecursor;
        src: url(/assets/Texgyrecursor.otf) format("truetype");
        font-display: swap;
      }

      @font-face {
        font-family: TexgyrecursorBold;
        src: url(/assets/TexgyrecursorBold.otf) format("truetype");
        font-display: swap;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      :root {
        --margin-left: 5em;
      }

      html {
        font-family: Texgyrecursor, sans-serif;
        color: var(--text-color);
        background-color: var(--bg-color);
        margin-left: var(--margin-left);
        min-height: 100vh;
        scroll-behavior: smooth;

        overflow-y: scroll;
        -ms-overflow-style: none;
        scrollbar-width: none;
        &::-webkit-scrollbar {
          display: none;
        }
      }

      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      a {
        color: inherit;
        text-decoration: none;

        &:hover {
          color: var(--text-hover-color);
        }
      }

      main {
        flex: 1;
      }

      section {
        max-width: 500px;
        padding-top: 2em;
      }

      @media (max-width: 768px) {
        :root {
          --margin-left: 20px;
        }
      }
    </style>
  </body>
</html>
