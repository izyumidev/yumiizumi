---
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import SkipToContent from "../components/SkipToContent.astro";
import Socials from "../components/Socials.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Yumi Izumi's Portfolio" />
    <meta property="og:title" content="Yumi Izumi" />
    <meta property="og:description" content="Yumi Izumi's Portfolio" />
    <meta property="og:url" content="https://yumiizumi.com/" />
    <meta property="og:type" content="website" />
    <title>{title}</title>
  </head>
  <body>
    <SkipToContent />
    <Nav />
    <div id="main">
      <slot />
    </div>
    <Socials />
    <Footer />
  </body>
</html>
<style lang="scss" is:global>
  @font-face {
    font-family: ForzanLight;
    src: url(/assets/ForzanLight.ttf) format("truetype");
    font-display: swap;
  }

  @font-face {
    font-family: Texgyrecursor;
    src: url(/assets/Texgyrecursor.otf) format("truetype");
    font-display: swap;
  }

  @font-face {
    font-family: TexgyrecursorBold;
    src: url(/assets/TexgyrecursorBold.otf) format("truetype");
    font-display: swap;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --text-color: #f5f5e5;
    --text-hover-color: #a1a0a0;
    --bg-color: #0f0f0f;
    --margin-left: 5em;
  }

  html {
    font-family: Texgyrecursor, sans-serif;
    color: var(--text-color);
    background-color: var(--bg-color);
    margin-left: var(--margin-left);
    font-size: large;

    overflow-y: scroll;
    -ms-overflow-style: none;
    scrollbar-width: none;

    &::-webkit-scrollbar {
      display: none;
    }
  }

  a {
    color: inherit;
    text-decoration: none;

    &:hover {
      color: var(--text-hover-color);
    }
  }

  section {
    max-width: 500px;
    padding-top: 2em;
  }

  @media (max-width: 768px) {
    :root {
      --margin-left: 20px;
    }
  }
</style>
