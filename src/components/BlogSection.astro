---
import { getCollection } from "astro:content";
import PostList from "./blog/PostList.astro";

const recentPosts = await getCollection("blog").then((collection) => {
  return collection
    .sort(
      (a, b) =>
        new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
    )
    .slice(0, 3);
});
---

<section id="blog">
  <h2>
    <a href="/blog">Blog</a>
  </h2>
  <PostList posts={recentPosts} />
  <p>
    <a href="/blog">Read more posts</a>
  </p>
  <style>
    h2 {
      margin-bottom: 1rem;
    }
    @media screen and (max-width: 768px) {
      #blog {
        padding-right: 1rem;
      }
    }
  </style>
</section>
